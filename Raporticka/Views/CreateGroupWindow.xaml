<Window x:Class="Raporticka.Views.CreateGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Raporticka.ViewModels" 
        mc:Ignorable="d"
        Title="CreateGroupWindow" Height="122.318" Width="306.638" Closed="Window_Closing">
    <Grid>
        <TextBox x:Name="GroupName" HorizontalAlignment="Left" Height="23" Margin="154,13,0,0" TextWrapping="Wrap" Text="{Binding GroupName}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Введите номер группы:" HorizontalAlignment="Left" Margin="12,10,0,0" VerticalAlignment="Top" Height="25"/>
        <Button Content="Создать" HorizontalAlignment="Left" Margin="16,44,0,0" VerticalAlignment="Top" Width="258" Height="30" Command="{Binding Adding}"/>
    </Grid>
</Window>
